<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kit.video.sample.generator.GeneratorSampleActivity">

    <com.kit.video.generator.ViewProcessingPipeline
        android:id="@+id/layout_pipeline"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_move"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_red_dark" />
    </com.kit.video.generator.ViewProcessingPipeline>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start Animation"
        app:layout_constraintBottom_toBottomOf="@+id/layout_pipeline"
        app:layout_constraintEnd_toEndOf="@+id/layout_pipeline"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>